<div class="containar px-5">
  <div class="row">

    <div class="col-md-3">
      <% if @book.user_id == current_user.id %>
        <%= render 'info', book: @new_book %>
      <% else %>
        <h1>
          User info
        </h1>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <table class="table table-hover">
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </table>
        <%= link_to edit_user_path(@book.user.id) do %>
          <span class="fa-solid fa-user-gear"></span>
        <% end %>
        <h1>
          New book
        </h1>
        <!--投稿画面-->
        <%= form_with model: @new_book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit 'Create Book' %>
        <% end %>
      <% end %>
    </div>

    <div class="offset-md-1 col-md-8">
      <h1>Book detail</h1>

      <table class="table table-hover">
        <tbody>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
              <div><%= @book.user.name %></div>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <% end %>
          </td>
        </tbody>
      </table>
    </div>
  </div>
</div>