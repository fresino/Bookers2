<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName" %>
  <label for="inputBody">Opinion</label>
  <%= f.text_field :body, id:"inputBody" %>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<span>|</span>
<%= link_to "Back", books_path %>
