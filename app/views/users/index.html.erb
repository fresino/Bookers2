<div class="containar px-5">
  <div class="row">

    <div class="col-md-3">
    <%= render 'info', book: @book %>
    </div>

    <div class="offset-md-1 col-md-8">
      <h1>
        Users
      </h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= image_tag user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>