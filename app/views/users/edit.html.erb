<div class="containar">
  <div class="row">
    <div class="mx-auto">
      <% if @user.errors.any? %>
      <%= @user.errors.count %>件のerrorが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
        </div>
        <div class="form-group">
          <label for="inputIntro">Introduction</label>
          <%= f.text_field :introduction, id:"inputIntro", class: "form-control" %>
        </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>